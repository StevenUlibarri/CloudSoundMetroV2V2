<Window x:Class="Cloudmp3.Windows.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create" Height="140" Width="300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Label Content="Username:" Foreground="Black" HorizontalAlignment="Center"/>
        <Label Content="Password:" Foreground="Black" HorizontalAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="UserNameBox" Grid.Column="1" />
        <PasswordBox PasswordChar="*" x:Name="PasswordBox" Grid.Column="1" Grid.Row="1"/>
        <StackPanel Grid.ColumnSpan="2" Grid.Row="2" HorizontalAlignment="Left">
            <UniformGrid HorizontalAlignment="Right" Width="300">
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click"/>
                <Button x:Name="CreateAcc" Content="Create"  Click="CreateAcc_Click"/>
            </UniformGrid>
        </StackPanel>
    </Grid>

</Window>
